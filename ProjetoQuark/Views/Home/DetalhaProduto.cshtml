@model ProjetoQuark.Models.ModelVeiculo

@{
    ViewBag.Title = "Detalhe do Produto";
}

<h2>Detalhe do Produto</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Produto</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.codProd)

        <div class="form-group">
            @Html.LabelFor(model => model.nomeProd)
            @Html.DisplayFor(model => model.nomeProd)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.descricaoProd)
            @Html.DisplayFor(model => model.descricaoProd)

        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.valorProd)
            @Html.DisplayFor(model => model.valorProd)

        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.quantidadeProd)
            @Html.DisplayFor(model => model.quantidadeProd)
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar", "Index", "Home")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
